<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dream_commerce_bug_tracker.guzzle_client.class">GuzzleHttp\Client</parameter>
        <parameter key="dream_commerce_bug_tracker.http_client.class">DreamCommerce\Component\BugTracker\Http\GuzzleClient</parameter>
        <parameter key="dream_commerce_bug_tracker.collector.class">DreamCommerce\Component\BugTracker\Collector\QueueCollector</parameter>
    </parameters>

    <services>
        <service id="dream_commerce_bug_tracker.collector_queue" class="%dream_commerce_bug_tracker.collector.class%">
            <tag name="kernel.event_listener" event="kernel.exception" method="handle" />
            <tag name="kernel.event_listener" event="console.exception"  method="handle" />
        </service>

        <service id="dream_commerce_bug_tracker.guzzle_client" class="%dream_commerce_bug_tracker.guzzle_client.class%" shared="false" />
        <service id="dream_commerce_bug_tracker.http_client" class="%dream_commerce_bug_tracker.http_client.class%" shared="false">
            <argument type="service" id="dream_commerce_bug_tracker.guzzle_client" />
        </service>

        <service id="dream_commerce.guzzle_client" alias="dream_commerce_bug_tracker.guzzle_client" />
        <service id="dream_commerce.http_client" alias="dream_commerce_bug_tracker.http_client" />
        <service id="bug_tracker" alias="dream_commerce_bug_tracker.collector_queue" />
    </services>
</container>