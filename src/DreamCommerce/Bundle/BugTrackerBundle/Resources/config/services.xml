<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dream_commerce_bugtracker.collector.class">DreamCommerce\Bundle\BugTrackerBundle\Collector\QueueCollector</parameter>
    </parameters>

    <services>
        <service id="dream_commerce_bugtracker.collector_queue" class="%dream_commerce_bugtracker.collector.class%">
            <tag name="kernel.event_listener" event="kernel.exception" method="handle" />
            <tag name="kernel.event_listener" event="console.exception"  method="handle" />
        </service>
    </services>
</container>